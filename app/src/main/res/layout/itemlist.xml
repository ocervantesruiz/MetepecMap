<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgIcono"
        android:layout_width="@dimen/layout"
        android:layout_height="@dimen/layout"
        android:layout_gravity="center"
        android:src="@drawable/church"
        android:layout_marginTop="@dimen/margin_top_img"
        android:layout_marginBottom="@dimen/margin_bottom_img"
    />

    <TextView
        android:id="@+id/tvIcono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom_tv"
        android:textSize="@dimen/textview_size"
        android:text="@string/sChurch"/>
</LinearLayout>